doctype html
html(lang="pt-br" prefix="og: http://ogp.me/ns#")

	// head
	// -----------------------------------------
	head
		// head requests
		include ./includes/head-requests.jade
		
		//Page infos
		-var title = "Open Source Checklist"
		-var description = "Um Guia para ajudar você a lembrar de coisas importantes na hora de criar seus projetos abertos no Github."
		
		// SEO
		meta(name="keywords" content="Open Source, Checklist, Github")
		meta(name="description" content=description)
		meta(name="robots" content="index,follow")
		title= title

		// Open Graph
		meta(property="og:type" content="website")
		meta(property="og:title" content= title)
		meta(property="og:description" content=description)
		meta(property="og:url" content="https://afonsopacifer.github.io/open-source-checklist/pt-br.html")
		meta(property="og:image" content="https://afonsopacifer.github.io/open-source-checklist/assets/img/check-logo.png")

		// Twitter Cards
		meta(name="twitter:card" content="summary_large_image")
		meta(name="twitter:title" content= title)
		meta(name="twitter:description" content=description)
		meta(name="twitter:url" content="https://afonsopacifer.github.io/open-source-checklist/pt-br.html")
		meta(name="twitter:image" content="https://afonsopacifer.github.io/open-source-checklist/assets/img/check-logo.png")

	body

		// header
		// -----------------------------------------
		header(class="header" role="banner")

			// Github Corner SVG
